  "devDependencies": {
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/marked": "^2.0.2",
    "@types/node": "^15.3.0",
    "@types/node-sass": "^4.11.1",
