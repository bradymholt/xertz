{
  "name": "xertz",
  "version": "0.57.0",
  "description": "A static site generator written in TypeScript",
  "author": "Brady Holt",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "main": "index.js",
  "bin": "bin/start.js",
  "files": [
    "bin/**/*.js",
    "dist/",
    "scaffold/"
  ],
  "scripts": {
    "build_scaffold": "cd scaffold/ && npx ts-node --files ../bin/start.ts build",
    "test": "jest",
    "prepublishOnly": "tsc"
  },
  "dependencies": {
    "@bradymholt/ampify": "^1.4.0",
    "chokidar": "^3.5.3",
    "dateformat": "^4.5.1",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.7",
    "js-yaml": "^4.1.0",
    "marked": "^4.0.17",
    "package-json": "^8.1.0",
    "prismjs": "^1.28.0",
    "sass": "^1.52.3"
  },
  "devDependencies": {
    "@types/dateformat": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.2",
    "@types/js-yaml": "^4.0.5",
    "@types/marked": "^4.0.3",
    "@types/node": "^18.0.0",
    "@types/package-json": "^5.0.1",
    "@types/prismjs": "^1.26.0",
    "jest": "^28.1.1",
    "npm-check-updates": "^16.7.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
